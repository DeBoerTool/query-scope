{
  "name": "dbt/query-scope",
  "description": "Class-based scopes for Illuminate's query builder",
  "keywords": [
    "dbt",
    "illuminate",
    "laravel",
    "query",
    "scope"
  ],
  "homepage": "https://github.com/dbt/query-scope",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Daniel S. Deboer",
      "email": "daniel.s.deboer@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.2.0",
    "illuminate/database": "5.8.*|^6.0|^7.0|^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "vimeo/psalm": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "Dbt\\Query\\": ["src/", "common/"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dbt\\Query\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --no-coverage",
    "test-coverage": "phpunit --coverage-html coverage",
    "stat": "psalm"
  },
  "config": {
    "sort-packages": true
  }
}
